{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			// "type": "shell",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				// 1. execute .out file 
				"&&", //to join building and running of the file
				"${fileDirname}/${fileBasenameNoExtension}"
				//2. file input
				// "<", "${fileDirname}/sample_input.txt",
				//3. file output
				// ">", "${fileDirname}/sample_output.txt"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		}
	]
}